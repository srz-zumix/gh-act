root = true

[*]
indent_style = space
indent_size = 4

[*.{sh}]
indent_size = 2
end_of_line = lf

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

[*.{json,ecrc}]
indent_size = 2

[{Makefile,GNUmakefile}]
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 2
