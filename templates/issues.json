{
  "action": "opened",
  "issue": {
    "active_lock_reason": null,
    "assignee": ${ASSIGNEE_USER_JSON:-null},
    "assignees": [${ASSIGNEES_JSON:-}],
    "author_association": "OWNER",
    $(gh issue view ${ISSUE_NUMBER} --json body | grep -o -e '"body":".*"' | sed -e 's/\\n/\\\\n/g' -e 's/\\r/\\\\r/g' -e 's/:""/: null/g'),
    "closed_at": "${ISSUE_CLOSED_AT}",
    "comments": ${ISSUE_COMMENTS},
    "comments_url": "https://${GITHUB_API}/repos/${OWNER}/${REPO}/issues/${ISSUE_NUMBER}/comments",
    "created_at": "${ISSUE_CREATED_AT}",
    "events_url": "https://${GITHUB_API}/repos/${OWNER}/${REPO}/issues/${ISSUE_NUMBER}/events",
    "html_url": "${ISSUE_URL}",
    "id": 0,
    ${ISSUE_LABELS},
    "labels_url": "https://${GITHUB_API}/repos/${OWNER}/${REPO}/issues/${ISSUE_NUMBER}/labels{/name}",
    "locked": false,
    "milestone": null,
    "node_id": "${ISSUE_NODE_ID}",
    "number": ${ISSUE_NUMBER},
    "performed_via_github_app": null,
    "reactions": {
      "+1": ${ISSUE_REACTION_THUMBS_UP_COUNT:-0},
      "-1": ${ISSUE_REACTION_THUMBS_DOWN_COUNT:-0},
      "confused": ${ISSUE_REACTION_CONFUSED_COUNT:-0},
      "eyes": ${ISSUE_REACTION_EYES_COUNT:-0},
      "heart": ${ISSUE_REACTION_HEART_COUNT:-0},
      "hooray": ${ISSUE_REACTION_HOORAY_COUNT:-0},
      "laugh": ${ISSUE_REACTION_LAUGH_COUNT:-0},
      "rocket": ${ISSUE_REACTION_ROCKET_COUNT:-0},
      "total_count": ${ISSUE_REACTION_TOTAL_COUNT:-0},
      "url": "https://${GITHUB_API}/repos/${OWNER}/${REPO}/issues/${ISSUE_NUMBER}/reactions"
    },
    "repository_url": "https://${GITHUB_API}/repos/${OWNER}/${REPO}",
    "state": "${ISSUE_STATE,,}",
    "state_reason": null,
    "timeline_url": "https://${GITHUB_API}/repos/${OWNER}/${REPO}/issues/${ISSUE_NUMBER}/timeline",
    "title": "${ISSUE_TITLE}",
    "updated_at": "${ISSUE_CLOSED_AT}",
    "url": "https://${GITHUB_API}/repos/${OWNER}/${REPO}/issues/${ISSUE_NUMBER}",
    "user": ${HEAD_USER_JSON}
  },
  "repository": ${HEAD_REPO_JSON},
  "sender": ${HEAD_USER_JSON}
}
